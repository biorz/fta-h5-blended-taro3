{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "esModuleInterop": true,
    "declaration": true
  },
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist/*"]
}
